{% set currentLang = (currentLang if currentLang else (lang if lang else (page.lang if page.lang else locale.default))) %}
{% set navLinks = [
  { href: '/' | url, label: i18n[currentLang].nav.home },
  { href: '/courses/' | url, label: i18n[currentLang].nav.courses },
  { href: '/ai-guide/' | url, label: i18n[currentLang].nav.ai_guide },
  { href: '/reflections/' | url, label: i18n[currentLang].nav.reflections }
] %}
<!doctype html>
<html lang="{{ locale.htmlLang[currentLang] or 'zh-Hant' }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Prevent FOUC: Check language preference before any rendering -->
  <script>
    (function() {
      try {
        const saved = localStorage.getItem('preferredLang');
        if (saved) {
          const validLangs = { 'en-US': 'en-US', 'zh-TW': 'zh-Hant' };
          const langAttr = validLangs[saved] || 'zh-Hant';
          document.documentElement.setAttribute('lang', langAttr);
          document.documentElement.setAttribute('data-user-lang', saved);
        }
      } catch (e) {}
    })();
  </script>
  <title>{{ title or i18n[currentLang].site.title }}</title>
  {% if description %}
  <meta name="description" content="{{ description }}">
  {% elif c and c.overview %}
  <meta name="description" content="{{ c.overview | truncate(200) }}">
  {% else %}
  <meta name="description" content="{{ i18n[currentLang].site.description }}">
  {% endif %}
  <meta name="keywords" content="{{ i18n[currentLang].metadata.keywords }}{% if c and c.tags %}, {{ c.tags | join(', ') }}{% endif %}">
  <link href="{{ '/css/site.css' | url }}" rel="stylesheet">

  <!-- Embed i18n data for client-side language switching -->
  <script>
    window.__I18N_DATA__ = {{ i18n | json | safe }};
    window.__CURRENT_LANG__ = '{{ currentLang }}';
    window.__DEFAULT_LANG__ = '{{ locale.default }}';
    window.__BASE_PATH__ = '{{ "/" | url }}';
    window.__LANG_SPECIFIC_PAGES__ = {{ (locale.langSpecificPages or []) | json | safe }};
  </script>

  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    (function(){
      const BASE = "{{ '/' | url }}";
      const CDN_JS  = "https://cdn.jsdelivr.net/npm/pagefind@1/dist/pagefind-ui.js";
      const CDN_CSS = "https://cdn.jsdelivr.net/npm/pagefind@1/dist/pagefind-ui.css";
      const LOCAL_JS  = BASE + "pagefind/pagefind-ui.js";
      const LOCAL_CSS = BASE + "pagefind/pagefind-ui.css";
      function loadCSS(h){ const l=document.createElement('link'); l.rel='stylesheet'; l.href=h; document.head.appendChild(l); }
      function loadJS(s,on){ const t=document.createElement('script'); t.src=s; t.defer=true; t.onload=on; t.onerror=function(){ if(s!==CDN_JS){ loadCSS(CDN_CSS); loadJS(CDN_JS,on);} }; document.head.appendChild(t); }
      fetch(LOCAL_JS,{method:'HEAD'}).then(r=>{
        if(r.ok){ loadCSS(LOCAL_CSS); loadJS(LOCAL_JS, ()=>{ if(window.PagefindUI) window.__initPagefind && window.__initPagefind(); }); }
        else{ loadCSS(CDN_CSS); loadJS(CDN_JS, ()=>{ if(window.PagefindUI) window.__initPagefind && window.__initPagefind(); }); }
      }).catch(()=>{ loadCSS(CDN_CSS); loadJS(CDN_JS, ()=>{ if(window.PagefindUI) window.__initPagefind && window.__initPagefind(); }); });
    })();
  </script>
</head>
<body style="background-color: var(--bg-secondary); color: var(--text-primary);">
  <header style="background-color: var(--bg-primary); border-bottom: 1px solid var(--border-color);" class="sticky top-0 z-[100] shadow-sm">
    <div class="max-w-6xl mx-auto px-4 py-4 flex items-center gap-4 relative">
      <a href="{{ '/' | url }}" class="font-bold text-xl" style="color: var(--primary);">{{ i18n[currentLang].site.title }}</a>
      <nav class="hidden md:flex absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2" aria-label="Primary navigation">
        <ul class="flex gap-8 justify-center">
            {% for link in navLinks %}
            <li>
            <a style="color: var(--text-secondary);" class="hover:text-blue-600 transition-colors font-medium" href="{{ link.href }}">{{ link.label }}</a>
            </li>
            {% endfor %}
          </ul>
        </nav>
      <div class="flex items-center gap-3 ml-auto">
        {% include "components/lang_switcher.njk" %}
        <button
          type="button"
          class="mobile-menu-toggle md:hidden"
          data-menu-toggle
          aria-expanded="false"
          aria-controls="mobile-nav-panel">
          <span class="sr-only">Toggle navigation</span>
          <svg class="mobile-menu-icon" data-menu-icon xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="4" y1="6" x2="20" y2="6" />
            <line x1="4" y1="12" x2="20" y2="12" />
            <line x1="4" y1="18" x2="20" y2="18" />
          </svg>
          <svg class="mobile-menu-icon hidden" data-menu-close-icon xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="18" y1="6" x2="6" y2="18" />
            <line x1="6" y1="6" x2="18" y2="18" />
          </svg>
        </button>
      </div>
    </div>
    <div id="mobile-nav-panel" class="mobile-menu-panel md:hidden hidden" data-menu-panel>
      <div class="max-w-6xl mx-auto px-4 py-4">
        <nav aria-label="Mobile navigation">
          <ul class="flex flex-col gap-3">
            {% for link in navLinks %}
            <li>
              <a class="block font-medium" style="color: var(--text-secondary);" href="{{ link.href }}">{{ link.label }}</a>
            </li>
            {% endfor %}
          </ul>
        </nav>
      </div>
    </div>
  </header>

  <main class="max-w-6xl mx-auto px-4 py-8">
    {{ content | safe }}
  </main>

  <footer class="site-footer">
    <div class="max-w-6xl mx-auto px-4 py-12">
      <div class="footer-content">
        <div class="footer-info">
          <h3 class="footer-title">{{ i18n[currentLang].site.title }}</h3>
          <p class="footer-license">{{ i18n[currentLang].footer.license }}</p>
          <a href="https://creativecommons.org/licenses/by-nc-sa/4.0/" target="_blank" rel="noopener noreferrer" style="margin-top: 0.5rem; display: inline-block;">
            <img src="https://i.creativecommons.org/l/by-nc-sa/4.0/88x31.png" alt="CC BY-NC-SA 4.0" style="border: 0;">
          </a>
        </div>
        <div class="footer-contact">
          <p class="footer-org">© {{ i18n[currentLang].footer.org }}</p>
          <a class="footer-email" href="mailto:{{ i18n[currentLang].footer.email }}">{{ i18n[currentLang].footer.email }}</a>
        </div>
      </div>
    </div>
  </footer>

  <!-- Language handler: loads synchronously to prevent FOUC -->
  <script src="{{ '/js/lang-dynamic.js' | url }}"></script>

  <script src="{{ '/js/gallery.js' | url }}" defer></script>
  <script src="{{ '/js/video-playlist.js' | url }}" defer></script>
  <script>
    (function() {
      const toggle = document.querySelector('[data-menu-toggle]');
      const panel = document.querySelector('[data-menu-panel]');
      if (!toggle || !panel) return;
      const openIcon = toggle.querySelector('[data-menu-icon]');
      const closeIcon = toggle.querySelector('[data-menu-close-icon]');

      function setMenuState(isOpen) {
        toggle.setAttribute('aria-expanded', String(isOpen));
        panel.classList.toggle('hidden', !isOpen);
        if (openIcon && closeIcon) {
          openIcon.classList.toggle('hidden', isOpen);
          closeIcon.classList.toggle('hidden', !isOpen);
        }
      }

      toggle.addEventListener('click', function(event) {
        event.stopPropagation();
        const expanded = toggle.getAttribute('aria-expanded') === 'true';
        setMenuState(!expanded);
      });

      document.addEventListener('click', function(event) {
        if (panel.classList.contains('hidden')) return;
        if (panel.contains(event.target) || toggle.contains(event.target)) return;
        setMenuState(false);
      });

      document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
          setMenuState(false);
        }
      });

      const mediaQuery = window.matchMedia('(min-width: 768px)');
      function handleQuery(event) {
        if (event.matches) {
          setMenuState(false);
        }
      }
      if (typeof mediaQuery.addEventListener === 'function') {
        mediaQuery.addEventListener('change', handleQuery);
      } else if (typeof mediaQuery.addListener === 'function') {
        mediaQuery.addListener(handleQuery);
      }
    })();
  </script>
  <script>
    window.__pagefindInstance = null;
    window.__initPagefind = function() {
      try {
        if (!window.PagefindUI) return;

        // Get user's language preference
        const savedLang = localStorage.getItem('preferredLang') || 'zh-TW';

        // Destroy existing instance if present
        if (window.__pagefindInstance && typeof window.__pagefindInstance.destroy === 'function') {
          window.__pagefindInstance.destroy();
        }

        // Get Pagefind translations for current language
        const pagefindTranslations = window.__I18N_DATA__[savedLang]?.pagefind || {};

        // Create new instance with full translations
        // Note: Using --force-language zh creates a single multilingual index
        // This allows both Chinese and English content to be searched together
        window.__pagefindInstance = new PagefindUI({
          element: "#search",
          showSubResults: true,
          translations: pagefindTranslations
        });
      } catch(e) {
        console.error('Pagefind init error:', e);
      }
    };
    document.addEventListener('DOMContentLoaded', ()=>{ if(window.setupGallery) window.setupGallery(); });
  </script>

  <!-- CommentBox.io initialization for reflections page -->
  {% if page.fileSlug == 'reflections' or title == '留言與交流' or title == 'Messages & Discussions' or includeCommentBox %}
  <script src="https://unpkg.com/commentbox.io/dist/commentBox.min.js"></script>
  <script>
    commentBox('5698158134820864-proj');
  </script>
  {% endif %}

  <!-- Innovation slider script (homepage only) -->
  {% if page.url == '/' %}
  <script src="{{ '/js/innovation-slider.js' | url }}"></script>
  {% endif %}
</body>
</html>
