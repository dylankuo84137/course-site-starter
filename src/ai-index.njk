---
permalink: /ai-index.json
eleventyExcludeFromCollections: true
---
{
  "site": {
    "name": "{{ site.title }}",
    "description": "Waldorf education course materials including workbooks, blackboard drawings, photos, and audio recordings",
    "url": "{% if site.url %}{{ site.url }}{% endif %}",
    "baseUrl": "{{ '/' | url }}",
    "license": "{% if site.license_text %}{{ site.license_text }}{% else %}CC BY-NC{% endif %}",
    "organization": "{{ site.footer_org }}",
    "contact": "{{ site.footer_email }}",
    "buildDate": "{{ buildTime }}",
    "totalCourses": {{ coursesList | length }}
  },
  "courses": [
    {%- for course in coursesList -%}
    {
      "slug": "{{ course.slug }}",
      "title": "{{ course.title }}",
      "url": "{{ ('/courses/' + course.slug + '/') | url }}",
      "grade": "{{ course.grade }}",
      "semester": "{{ course.semester }}",
      "unit": "{{ course.unit }}",
      "domain": "{{ course.domain }}",
      "teacher": "{{ course.teacher }}",
      "summary": "{{ course.overview | truncate(200) | replace('\n', ' ') | replace('"', '\\"') }}",
      "tags": [{% for tag in course.tags %}"{{ tag }}"{{ "," if not loop.last }}{% endfor %}],
      {% if course.learningObjectives -%}
      "learningObjectives": [{% for obj in course.learningObjectives %}"{{ obj | replace('"', '\\"') }}"{{ "," if not loop.last }}{% endfor %}],
      {% else -%}
      "learningObjectives": [],
      {% endif -%}
      "pages": {
        "home": "{{ site.url }}{{ ('/courses/' + course.slug + '/') | url }}"
        {%- if course.google_docs and course.google_docs.story -%}
        ,"story": "{{ site.url }}{{ ('/courses/' + course.slug + '/story/') | url }}"
        {%- endif -%}
        ,"play_script": "{{ site.url }}{{ ('/courses/' + course.slug + '/play-script/') | url }}"
        ,"workbook": "{{ site.url }}{{ ('/courses/' + course.slug + '/workbook/') | url }}"
        {%- if course.files and course.files.photos and course.files.photos.length > 0 -%}
        ,"photos": "{{ site.url }}{{ ('/courses/' + course.slug + '/photos/') | url }}"
        {%- endif -%}
        {%- if course.files and course.files.blackboard and course.files.blackboard.length > 0 -%}
        ,"blackboard": "{{ site.url }}{{ ('/courses/' + course.slug + '/blackboard/') | url }}"
        {%- endif -%}
        ,"scripts": "{{ site.url }}{{ ('/courses/' + course.slug + '/scripts/') | url }}"
        ,"songs": "{{ site.url }}{{ ('/courses/' + course.slug + '/songs/') | url }}"
        {%- if course.files and course.files.sheet_music and course.files.sheet_music.length > 0 -%}
        ,"sheet_music": "{{ site.url }}{{ ('/courses/' + course.slug + '/sheet-music/') | url }}"
        {%- endif -%}
        {%- if course.youtube_videos and course.youtube_videos.play_video -%}
        ,"videos": "{{ site.url }}{{ ('/courses/' + course.slug + '/videos/') | url }}"
        {%- endif -%}
      },
      "materials": {
        "hasStory": {% if course.google_docs and course.google_docs.story %}true{% else %}false{% endif %},
        "hasPlayScript": true,
        "hasWorkbook": true,
        "hasPhotos": {% if course.files and course.files.photos and course.files.photos.length > 0 %}true{% else %}false{% endif %},
        "hasBlackboard": {% if course.files and course.files.blackboard and course.files.blackboard.length > 0 %}true{% else %}false{% endif %},
        "hasScripts": true,
        "hasAudio": true,
        "hasSheetMusic": {% if course.files and course.files.sheet_music and course.files.sheet_music.length > 0 %}true{% else %}false{% endif %},
        "hasVideos": {% if course.youtube_videos and course.youtube_videos.play_video %}true{% else %}false{% endif %}
      },
      "metadata": {
        "heroImage": {% if course.hero_image %}"{{ course.hero_image }}"{% else %}null{% endif %},
        "hasDocs": {% if course.docs and (course.docs | length) > 0 %}true{% else %}false{% endif %}
      }
    }{{ "," if not loop.last }}
    {%- endfor -%}
  ],
  "statistics": {
    "totalGrades": {{ coursesList | map('grade') | uniq | length }},
    "totalDomains": {{ coursesList | map('domain') | uniq | length }},
    "totalTeachers": {{ coursesList | map('teacher') | uniq | length }},
    "uniqueTags": {{ coursesList | map('tags') | flatten | uniq | length }}
  },
  "usage": {
    "description": "This AI-readable index provides structured access to all course data",
    "queryExamples": [
      "List all Grade 2 courses",
      "Find courses by teacher name",
      "Get all drama courses",
      "Compare blackboard drawing across grades"
    ],
    "documentation": "{{ '/for-ai/' | url }}"
  }
}
