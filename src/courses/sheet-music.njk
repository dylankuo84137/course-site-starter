---
layout: layouts/base.njk
pagination:
  data: coursesList
  size: 1
  alias: c
permalink: "/courses/{{ c.slug }}/sheet-music/index.html"
---
{% import "components/course-breadcrumb.njk" as breadcrumb %}
{{ breadcrumb.breadcrumb(c, coursesList, 'sheet-music', currentLang, i18n) }}

{% if c.hero_image %}
<div class="section-hero">
  <img class="section-hero-image" src="https://drive.google.com/thumbnail?id={{ c.hero_image }}&sz=w600" alt="{{ c.title }} banner" loading="lazy">
  <div class="section-hero-overlay">
    <h1 class="section-hero-title">樂譜</h1>
  </div>
</div>
{% else %}
<h1 class="text-2xl md:text-3xl font-semibold mb-4">樂譜</h1>
{% endif %}

{% import "components/drive.njk" as drv %}

{% if c.files.sheet_music and c.files.sheet_music.length > 0 %}
<section class="mb-8">
  <h2 class="text-lg font-medium mb-4">樂譜內容</h2>
  {% for pdf in c.files.sheet_music %}
    {{ drv.pdfViewer(pdf) }}
  {% endfor %}
</section>
{% else %}
  <p class="text-stone-500">目前沒有樂譜內容。</p>
{% endif %}
