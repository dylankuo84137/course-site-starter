---
layout: layouts/base.njk
hidePagefindSearch: true
pagination:
  data: coursesList
  size: 1
  alias: c
permalink: "/courses/{{ c.slug }}/sheet-music/index.html"
---
{% import "components/course-breadcrumb.njk" as breadcrumb %}

{# Course navigation with home pill highlighted and materials dropdown #}
{{ breadcrumb.breadcrumb(c, coursesList, 'sheet-music', currentLang, i18n) }}


<h1 class="text-2xl md:text-3xl font-semibold mb-4">{{ i18n[currentLang].course.sheet_music }}</h1>

{% import "components/drive.njk" as drv %}

{% if c.files.sheet_music and c.files.sheet_music.length > 0 %}
<section class="mb-8">
  <h2 class="text-lg font-medium mb-4">樂譜內容</h2>
  {% for pdf in c.files.sheet_music %}
    {{ drv.pdfViewer(pdf) }}
  {% endfor %}
</section>
{% else %}
  <p class="text-stone-500">目前沒有樂譜內容。</p>
{% endif %}
