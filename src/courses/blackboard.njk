---
layout: layouts/base.njk
pagination:
  data: coursesList
  size: 1
  alias: c
permalink: "/courses/{{ c.slug }}/blackboard/index.html"
---
{% import "components/course_nav.njk" as cn %}
{{ cn.nav(c, coursesList, 'blackboard', currentLang, i18n) }}

{% if c.hero_image %}
<div class="section-hero">
  <img class="section-hero-image" src="https://drive.google.com/thumbnail?id={{ c.hero_image }}&sz=w600" alt="{{ c.title }} banner" loading="lazy">
  <div class="section-hero-overlay">
    <h1 class="section-hero-title">黑板畫</h1>
  </div>
</div>
{% else %}
<h1 class="text-2xl md:text-3xl font-semibold mb-4">黑板畫</h1>
{% endif %}

{% import "components/drive.njk" as drive %}
<section id="blackboard-gallery">
  {{ drive.grid(c.files.blackboard, c.title ~ ' Blackboard Drawings') }}
</section>
