---
layout: layouts/base.njk
hidePagefindSearch: true
pagination:
  data: coursesList
  size: 1
  alias: c
permalink: "/courses/{{ c.slug }}/worksheet/index.html"
---
{% import "components/course-breadcrumb.njk" as breadcrumb with context %}
{% import "components/drive.njk" as drv %}

{{ breadcrumb.breadcrumb(c, coursesList, 'worksheet', currentLang, i18n) }}

{% set worksheetPdfs = materialHelpers.getMaterialItems(c, 'worksheet') %}

<h1 class="text-2xl md:text-3xl font-semibold mb-6">{{ i18n[currentLang].course.worksheet }}</h1>

{% if worksheetPdfs and worksheetPdfs.length > 0 %}
  <section class="space-y-8">
    {% for pdf in worksheetPdfs %}
      {{ drv.pdfViewer(pdf) }}
    {% endfor %}
  </section>
{% else %}
  <p class="text-stone-500">
    {{ i18n[currentLang].course.no_content }}
    <span class="block text-sm text-stone-400">
      請在 course JSON 的 <code>material.worksheet</code> 中設定 PDF，並執行同步腳本。
    </span>
  </p>
{% endif %}
