---
layout: layouts/base.njk
pagination:
  data: coursesList
  size: 1
  alias: c
permalink: "/courses/{{ c.slug }}/videos/index.html"
---
{% import "components/course_nav.njk" as cn %}
{{ cn.nav(c, coursesList, 'videos', currentLang, i18n) }}

{% set courseTitle = c.i18n[currentLang].title if (c.i18n and c.i18n[currentLang] and c.i18n[currentLang].title) else c.title %}
{% set courseGrade = c.i18n[currentLang].grade if (c.i18n and c.i18n[currentLang] and c.i18n[currentLang].grade) else c.grade %}
{% set courseSemester = c.i18n[currentLang].semester if (c.i18n and c.i18n[currentLang] and c.i18n[currentLang].semester) else c.semester %}
{% set courseUnit = c.i18n[currentLang].unit if (c.i18n and c.i18n[currentLang] and c.i18n[currentLang].unit) else c.unit %}
{% set courseDomain = c.i18n[currentLang].domain if (c.i18n and c.i18n[currentLang] and c.i18n[currentLang].domain) else c.domain %}
<section class="space-y-6">
  <header data-course-i18n="{{ c.i18n | json }}">
    <h1 class="text-2xl md:text-3xl font-semibold">
      <span data-i18n-course="title">{{ courseTitle }}</span> - <span class="page-label">{{ i18n[currentLang].course.video }}</span>
    </h1>
    <p class="text-stone-600">
      <span data-i18n-course="grade">{{ courseGrade }}</span>・
      <span data-i18n-course="semester">{{ courseSemester }}</span>｜
      <span data-i18n-course="unit">{{ courseUnit }}</span>｜
      <span data-i18n-course="domain">{{ courseDomain }}</span>
    </p>
  </header>

  {% if c.youtube_videos and c.youtube_videos.play_video %}
    <article class="prose prose-stone max-w-none">
      <div class="aspect-video bg-stone-100 rounded-lg overflow-hidden shadow-lg">
        <iframe
          class="w-full h-full"
          src="https://www.youtube.com/embed/{{ c.youtube_videos.play_video }}"
          title="演出影片"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen>
        </iframe>
      </div>
    </article>
  {% else %}
    <div class="bg-stone-100 border border-stone-200 rounded-lg p-6 text-center text-stone-600">
      <h3 class="text-lg font-medium mb-2">尚無演出影片</h3>
      <p>影片內容將在稍後新增</p>
    </div>
  {% endif %}
</section>
