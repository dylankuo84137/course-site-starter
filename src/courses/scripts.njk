---
layout: layouts/base.njk
pagination:
  data: coursesList
  size: 1
  alias: c
permalink: "/courses/{{ c.slug }}/scripts/index.html"
---
{% import "components/course_nav.njk" as cn %}
{{ cn.nav(c, coursesList, 'scripts', currentLang, i18n) }}

{% if c.hero_image %}
<div class="section-hero">
  <img class="section-hero-image" src="https://drive.google.com/thumbnail?id={{ c.hero_image }}&sz=w600" alt="{{ c.title }} banner" loading="lazy">
  <div class="section-hero-overlay">
    <h1 class="section-hero-title">{{ i18n[currentLang].course.performance }}</h1>
  </div>
</div>
{% else %}
<h1 class="text-2xl md:text-3xl font-semibold mb-4">{{ i18n[currentLang].course.performance }}</h1>
{% endif %}

{% import "components/drive.njk" as drive %}
<section id="performance-gallery">
  {{ drive.grid(c.files.scripts_photos, c.title ~ ' Performance Photos') }}
</section>
