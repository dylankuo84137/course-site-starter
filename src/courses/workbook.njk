---
layout: layouts/base.njk
pagination:
  data: coursesList
  size: 1
  alias: c
permalink: "/courses/{{ c.slug }}/workbook/index.html"
---
{% import "components/course_nav.njk" as cn %}
{{ cn.nav(c, coursesList, 'workbook', currentLang, i18n) }}

{% if c.hero_image %}
<div class="section-hero">
  <img class="section-hero-image" src="https://drive.google.com/thumbnail?id={{ c.hero_image }}&sz=w600" alt="{{ c.title }} banner" loading="lazy">
  <div class="section-hero-overlay">
    <h1 class="section-hero-title">{{ i18n[currentLang].course.workbook }}</h1>
  </div>
</div>
{% else %}
<h1 class="text-2xl md:text-3xl font-semibold mb-4">{{ i18n[currentLang].course.workbook }}</h1>
{% endif %}

{% import "components/drive.njk" as drv %}

{% if c.files.workbook_pdfs and c.files.workbook_pdfs.length > 0 %}
<section class="mb-8">
  <h2 class="text-lg font-medium mb-4">{{ i18n[currentLang].course.workbook_content }}</h2>
  {% for pdf in c.files.workbook_pdfs %}
    {{ drv.pdfViewer(pdf) }}
  {% endfor %}
</section>
{% elif c.files.workbook_photos and c.files.workbook_photos.length > 0 %}
<section id="workbook-content" class="mb-8">
  <h2 class="text-lg font-medium mb-4">{{ i18n[currentLang].course.workbook_content }}</h2>
  {{ drv.grid(c.files.workbook_photos, c.title ~ ' Workbook') }}
</section>
{% else %}
  <p class="text-stone-500">{{ i18n[currentLang].course.no_content }}</p>
{% endif %}
