---
layout: layouts/base.njk
hidePagefindSearch: true
pagination:
  data: coursesList
  size: 1
  alias: c
permalink: "/courses/{{ c.slug }}/photos/index.html"
---
{% import "components/course-breadcrumb.njk" as breadcrumb with context %}

{# Course navigation with home pill highlighted and materials dropdown #}
{{ breadcrumb.breadcrumb(c, coursesList, 'photos', currentLang, i18n) }}


{% set coursePhotos = materialHelpers.getMaterialItems(c, 'photos') %}

<h1 class="text-2xl md:text-3xl font-semibold mb-4">{{ i18n[currentLang].course.photo_gallery }}</h1>

{% import "components/drive.njk" as drive %}
<section id="photo-gallery">
  {% if coursePhotos and coursePhotos.length > 0 %}
    {{ drive.grid(coursePhotos, c.title ~ ' Photos') }}
  {% else %}
    <p class="text-stone-500">
      {{ i18n[currentLang].course.no_content }}
      <span class="block text-sm text-stone-400">請在 <code>material.photos</code> 中設定 Drive 資料夾或手動素材。</span>
    </p>
  {% endif %}
</section>
