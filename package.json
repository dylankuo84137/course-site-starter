{
  "name": "course-site-starter",
  "version": "0.5.0",
  "private": true,
  "description": "慈心課程織圖｜11ty + Tailwind + Pagefind + Drive sync",
  "scripts": {
    "dev": "npx @11ty/eleventy --serve",
    "build": "npx @11ty/eleventy",
    "postbuild": "npx pagefind --site _site --force-language zh",
    "prebuild": "node scripts/validation/validate-courses.js && node scripts/validation/validate-innovations.js",
    "deploy": "npm run build && npm run postbuild",
    "sync:drive": "node scripts/sync/fetch-drive.mjs",
    "validate": "node scripts/validation/validate-courses.js && node scripts/validation/validate-innovations.js",
    "validate:innovations": "node scripts/validation/validate-innovations.js",
    "validate:watch": "npx nodemon --watch src/_data/course_*.json --exec \"npm run validate\""
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "eleventy-plugin-i18n": "^0.1.3",
    "pagefind": "^1.4.0"
  },
  "dependencies": {
    "pdf-parse": "^1.1.1"
  }
}
